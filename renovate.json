{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergePatch",
    ":preserveSemverRanges",
    ":timezone(Asia/Tokyo)"
  ],
  "ignorePresets": ["prHourlyLimit2"],
  "dependencyDashboard": false,
  "prConcurrentLimit": 3,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
