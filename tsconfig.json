{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmitOnError": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/components/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "outDir": "./dist/",
    "module": "esnext"
  },
  "include": ["./src", "./types/**/*.d.ts"],
  "exclude": ["./dist"]
}
