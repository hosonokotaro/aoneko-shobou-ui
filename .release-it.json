{
  "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
  "git": {
    "commit": true,
    "commitMessage": "chore: Create new tag v${version}",
    "push": true,
    "tagName": "v${version}"
  },
  "hooks": {
    "preRelease": "git add package.json && git commit -m 'chore: Prepare create new tag v${version}'"
  },
  "npm": {
    "publish": false
  }
}
